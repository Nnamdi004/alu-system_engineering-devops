#!/usr/bin/env bash
# Configures Nginx server with a custom 404 page

# Update package list and install Nginx
apt-get update -y
apt-get install -y nginx

# Create a simple index page
echo "Hello World!" > /var/www/html/index.html

# Create custom 404 page with exact string
echo "Ceci n'est pas une page" > /var/www/html/404.html

# Create Nginx configuration with custom 404 page
cat > /etc/nginx/sites-available/default <<'EOF'
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    server_name _;

    error_page 404 /404.html;
    location = /404.html {
        internal;
    }

    location / {
        try_files $uri $uri/ =404;
    }
}
EOF

# Ensure the sites-enabled directory exists
mkdir -p /etc/nginx/sites-enabled

# Remove any existing default symlink
rm -f /etc/nginx/sites-enabled/default

# Create symlink
ln -s /etc/nginx/sites-available/default /etc/nginx/sites-enabled/default

# Test Nginx configuration
nginx -t

# Start Nginx service
service nginx start

# Restart to apply changes
service nginx restart
